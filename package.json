{
  "name": "@himdel/poc-components",
  "version": "1.0.0",
  "description": "shared JS components based on patternfly 4 components and guidelines",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest --verbose"
  },
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himdel/poc-components.git"
  },
  "keywords": [
    "patternfly",
    "components"
  ],
  "authors": [
    "Martin Hradil",
    "Zita Nemeckova"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/himdel/poc-components/issues"
  },
  "homepage": "https://github.com/himdel/poc-components#readme",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@patternfly/patternfly": "^4.164.2",
    "@patternfly/react-core": "^4.181.1",
    "@patternfly/react-icons": "^4.32.1",
    "@storybook/addon-actions": "^6.4.10",
    "@storybook/addon-links": "^6.4.10",
    "@storybook/addons": "^5.3.22",
    "@storybook/react": "^6.4.10",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "typescript": "^4.5.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "roots": [
      "<rootDir>/src/"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@redhat-cloud-services)"
    ]
  }
}
